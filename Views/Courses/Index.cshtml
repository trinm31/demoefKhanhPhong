<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">CourseId</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">action</th>
    </tr>
    </thead>
    <tbody>
     @foreach (var course in Model)
     {
         <tr>
             <th scope="row">@course.CourseId</th>
             <td>@course.Name</td>
             <td>@course.Category.Name</td>
             <td>
                  <a class="btn btn-warning" 
                                     asp-controller="Courses" asp-action="Update" asp-route-courseId="@course.CourseId">Update</a>
                 <a class="btn btn-danger" onClick="return confirm('Are you sure you want to delete this item')"
                    asp-controller="Courses" asp-action="Delete" asp-route-courseId="@course.CourseId">Delete</a>
             </td> 
         </tr>
     }
    </tbody>
</table>